@{
    ViewData["Title"] = "Available Appointments";
}
@model List<Appointment>

<h1>Available Appointments</h1>


<table class="table table-sm table-striped ">
    <thead class="thead-dark">
        <tr>
            
            <td style="font-size: 23px;">Day</td>
            <td style="font-size: 23px;">Time</td>
            <td></td>

        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Day</td>
                <td>@a.Time</td>
                <td>
                    <a class="btn btn-sm" style="background-color: cyan" asp-controller="Home" asp-action="BookAppointment" asp-route-appointmentid="@a.AppointmentId">Sign Up</a>
                    @*<form method="get" asp-action="BookAppointment" asp-route-appointmentid="@a.AppointmentId">
                        <input type="hidden" asp-for="@a.AppointmentId" />
                        <button class="btn btn-small btn-danger" type="submit" value="Submit">Sign Up</button>
                    </form>*@
                </td>

            </tr>

        }

    </tbody>
</table>
